Notebook[{
Cell["00 - DTheta Domain in Schwarzschild-de Sitter", "Title",ExpressionUUID->"39cbb32d-0ccf-483b-97e4-cdbc6b8df0d6"],

Cell["\<\
Question zero: define DTheta with an operational redshift cutoff and test \
unambiguous boundary shape derivative under BH-mass deformation.\
\>", "Text",ExpressionUUID->"09de83f1-8f7d-4b26-9c3d-c5ca1e330602"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"f", "[", 
    RowBox[{"r_", ",", "M_", ",", "H_"}], "]"}], ":=", 
   RowBox[{"1", "-", 
    FractionBox[
     RowBox[{"2", " ", "M"}], "r"], "-", 
    RowBox[{
     SuperscriptBox["H", "2"], " ", 
     SuperscriptBox["r", "2"]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"f5b25fab-e390-4606-8333-2afba98cf0f3"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"DTheta", "[", 
    RowBox[{"M_", ",", "H_", ",", "z2_"}], "]"}], "\[Equal]", 
   RowBox[{"{", 
    RowBox[{
     RowBox[{"r", ">", "0"}], "|", 
     RowBox[{
      RowBox[{"f", "[", 
       RowBox[{"r", ",", "M", ",", "H"}], "]"}], "\[GreaterEqual]", "z2"}]}], 
    "}"}]}],
  HoldForm]], "Input",ExpressionUUID->"e32bbad0-fc33-4438-bddf-e9e49f3acfc2"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"{", 
    RowBox[{"rIn", ",", "rOut"}], "}"}], "/.", "\[VeryThinSpace]", 
   RowBox[{
    RowBox[{
     RowBox[{
      RowBox[{"f", "[", 
       RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], "\[Equal]", 
     "0"}], "&&", 
    RowBox[{"rIn", "<", "rOut"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"c15495e8-935a-49dc-b553-7659795addd6"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"drdM", "[", "r_", "]"}], "\[Equal]", 
   RowBox[{"-", 
    FractionBox[
     RowBox[{
      SubscriptBox["\[PartialD]", "M"], 
      RowBox[{"(", 
       RowBox[{
        RowBox[{"f", "[", 
         RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], ")"}]}], 
     RowBox[{
      SubscriptBox["\[PartialD]", "r"], 
      RowBox[{"(", 
       RowBox[{
        RowBox[{"f", "[", 
         RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], ")"}]}]]}], "\[Equal]", 
   FractionBox["r", 
    RowBox[{"M", "-", 
     RowBox[{
      SuperscriptBox["H", "2"], " ", 
      SuperscriptBox["r", "3"]}]}]]}],
  HoldForm]], "Input",ExpressionUUID->"12a86853-1d17-4eff-b4bf-062503b1c6f5"],

Cell[BoxData[
 TagBox[
  RowBox[{"dI0dM", "\[Equal]", 
   RowBox[{
    RowBox[{
     RowBox[{"mu", "[", "rOut", "]"}], " ", "drOutdM"}], "-", 
    RowBox[{
     RowBox[{"mu", "[", "rIn", "]"}], " ", "drIndM"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"f3bb05af-af54-4895-8616-9d3d8585b019"]
},
